# Environment Configuration Template for NailTracker
# Copy this file to .env and fill in your values

# Development/Production Mode
NODE_ENV=development

# App Configuration
APP_NAME=NailTracker
APP_VERSION=1.0.0

# Notification Settings (Optional - for future push notification service)
# NOTIFICATION_API_KEY=your_api_key_here
# NOTIFICATION_SENDER_ID=your_sender_id_here

# Analytics (Optional - for future analytics integration)
# ANALYTICS_API_KEY=your_analytics_key_here

# Backend API (Optional - for future cloud sync feature)
# API_BASE_URL=https://your-api-domain.com
# API_VERSION=v1

# Debug Settings
DEBUG_MODE=true
ENABLE_FLIPPER=true

# Photo Storage Settings
MAX_PHOTOS=100
PHOTO_QUALITY=0.8

# Notification Timing (in hours, 24-hour format)
DEFAULT_DAILY_REMINDER=20
DEFAULT_URGE_REMINDER_1=09
DEFAULT_URGE_REMINDER_2=15
DEFAULT_URGE_REMINDER_3=21

# Feature Flags (for enabling/disabling features during development)
ENABLE_NOTIFICATIONS=true
ENABLE_CAMERA=true
ENABLE_ANALYTICS=true
ENABLE_EXPORT=true